@model HomeBook.Web.ViewModels.Apartments.ApartmentInputModel
@using HomeBook.Common
@{ this.ViewData["Title"] = "Add Apartment";
    var entrances = this.ViewData["Entrances"] as SelectList;}

<!-- ======= Header ======= -->
<header id="header" class="fixed-top ">
    <div class="container">

        <div class="logo float-left">
            <h1 class="text-light"><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a></h1>
        </div>

        <nav class="nav-menu float-right d-none d-lg-block">
            <ul>
                <li class="active"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="active"><a asp-area="" asp-controller="About" asp-action="Index">About</a></li>
                <li class="active"><a asp-area="" asp-controller="Services" asp-action="Index">Services</a></li>
                <li class="active"><a asp-area="" asp-controller="BlogPosts" asp-action="Index">Blog</a></li>
                <li class="active"><a asp-area="" asp-controller="Contact" asp-action="Index">Contact</a></li>
                <partial name="_LoginPartial" />
            </ul>
        </nav><!-- .nav-menu -->

    </div>
</header><!-- End Header -->
<br />
<br />
<br />
<br />
<div class="col-lg-6">
    <h2>New Apartment</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Apartment Number</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.ApartmentNumber" class="form-control" required="required">
                <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Floor</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Floor" class="form-control" required="required">
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Number of residents</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.NumberOfResidents" class="form-control" required="required">
                <span asp-validation-for="NumberOfResidents" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Area</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.Area" class="form-control" required="required">
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Entrance</label>
            <div class="col-sm-10">
                <select asp-for="@Model.EntranceId" class="form-control" asp-items="@entrances">
                </select>
                <span asp-validation-for="EntranceId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administration" asp-controller="Apartments" asp-action="AddApartment">
                    Add Apartment
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administration" asp-controller="Apartments" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>