@model HomeBook.Web.ViewModels.Entrances.EntranceInputModel
@using HomeBook.Common
@{ this.ViewData["Title"] = "Add Entrance";
    var buildings = this.ViewData["Buildings"] as SelectList;}

<!-- ======= Header ======= -->
<header id="header" class="fixed-top ">
    <div class="container">

        <div class="logo float-left">
            <h1 class="text-light"><a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@GlobalConstants.SystemName</a></h1>
        </div>

        <nav class="nav-menu float-right d-none d-lg-block">
            <ul>
                <li class="active"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="active"><a asp-area="" asp-controller="About" asp-action="Index">About</a></li>
                <li class="active"><a asp-area="" asp-controller="Services" asp-action="Index">Services</a></li>
                <li class="active"><a asp-area="" asp-controller="Contact" asp-action="Index">Contact</a></li>
                <partial name="_LoginPartial" />
            </ul>
        </nav><!-- .nav-menu -->

    </div>
</header><!-- End Header -->
<br />
<br />
<br />
<br />
<div class="col-lg-6">
    <h2>New Entrance</h2>
    <form method="post" enctype="multipart/form-data" class="pt-4">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Entrance address sign</label>
            <div class="col-sm-10">
                <input type="text" asp-for="@Model.EntranceAddressSign" class="form-control" required="required">
                <span asp-validation-for="EntranceAddressSign" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Street</label>
            <div class="col-sm-10">
                <select asp-for="@Model.BuildingId" class="form-control" asp-items="@buildings">
                </select>
                <span asp-validation-for="BuildingId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success"
                        asp-area="Administration" asp-controller="Entrances" asp-action="AddEntrance">
                    Add Entrance
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" asp-area="Administration" asp-controller="Entrances" asp-action="Index">Cancel</a>
            </div>
        </div>
    </form>
</div>